{
    "compilerOptions": {
        "module": "none",
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "baseUrl": ".",
        "esModuleInterop": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
